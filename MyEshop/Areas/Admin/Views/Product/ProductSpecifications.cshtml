@using MyEshop.Core.Convertors
@model Products
@inject IProductServices ProductServices;

<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>
                            مشخصات @Model.Title
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg></a></li>
                        <li class="breadcrumb-item">محصولات</li>
                        <li class="breadcrumb-item active">مشخصات @Model.Title</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h5>
                    اطلاعات محصول
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                            <thead>
                                                <tr>
                                                    <th class="text-center" style="vertical-align:middle">عکس</th>
                                                    <th class="text-center" style="vertical-align:middle">عنوان</th>
                                                    <th class="text-center" style="vertical-align:middle">برند</th>
                                                    <th class="text-center" style="vertical-align:middle">دسته بندی  سایت</th>
                                                    <th class="text-center" style="vertical-align:middle">گروه</th>
                                                    <th class="text-center" style="vertical-align:middle">تاریخ ثبت</th>
                                                    <th class="text-center" style="vertical-align:middle">قیمت</th>
                                                    <th class="text-center" style="vertical-align:middle">تخفیف</th>
                                                    <th class="text-center" style="vertical-align:middle">قیمت تخفیف یافته</th>
                                                    <th class="text-center" style="vertical-align:middle">امتیاز</th>
                                                    <th class="text-center" style="vertical-align:middle">کلمات کلیدی</th>
                                                    <th class="text-center" style="vertical-align:middle">وضعیت</th>
                                                    <th class="text-center" style="vertical-align:middle">مرجوع شدن</th>
                                                    <th class="text-center" style="vertical-align:middle">شگفت انگیز</th>
                                                    <th class="text-center" style="vertical-align:middle">نقد و بررسی</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <tr>
                                                    <td class="text-center" style="vertical-align: middle;">
                                                        <img style="max-width:150px" src="/Admin/images/ProductThumbnails/@Model.ImageName" class="img-thumbnail" />
                                                    </td>
                                                    <td class="text-center" style="vertical-align: middle;">@Model.Title<hr />@Model.EnglishTitle</td>
                                                    <td class="text-center" style="vertical-align: middle;">@ProductServices.GetBrandTitle(Model.BrandId)</td>
                                                    <td class="text-center" style="vertical-align: middle;">@ProductServices.GetWebsiteCategoryTitle(Model.WebsiteCategoryId)</td>
                                                    <td class="text-center" style="vertical-align: middle;">@ProductServices.GetProductCategoryTitle(Model.ProductCategoryId)</td>
                                                    <td class="text-center" style="vertical-align: middle;">@Model.CreateDate.ToShamsi()</td>
                                                    <td class="text-center" style="vertical-align: middle;">@Model.Price</td>
                                                    <td class="text-center" style="vertical-align: middle;">@Model.Discount%</td>
                                                    <td class="text-center" style="vertical-align: middle;">@Model.DiscountedPrice</td>
                                                    <td class="text-center" style="vertical-align: middle;">@Model.Score</td>
                                                    <td class="text-center" style="vertical-align: middle;">@Model.Tags</td>
                                                    <td class="text-center" style="vertical-align: middle;">
                                                        @if (Model.IsActive == true)
                                                        {
                                                            <p class="text text-success text-center">فعال</p>
                                                        }
                                                        else
                                                        {
                                                            <p class="text text-danger text-center">غیر فعال</p>
                                                        }
                                                    </td>
                                                    <td class="text-center" style="vertical-align: middle;">
                                                        @if (Model.ReturnAble == true)
                                                        {
                                                            <p class="text text-success text-center">قابل مرجوع</p>
                                                        }
                                                        else
                                                        {
                                                            <p class="text text-danger text-center">غیر قابل مرجوع</p>
                                                        }
                                                    </td>
                                                    <td class="text-center" style="vertical-align: middle;">
                                                        @if (Model.IsAmazing == true)
                                                        {
                                                            <p class="text text-success text-center">است</p>
                                                        }
                                                        else
                                                        {
                                                            <p class="text text-danger text-center">نیست</p>
                                                        }
                                                    </td>
                                                    <td class="text-center" style="vertical-align: middle;">
                                                        <a href="/Admin/CompeleteDescriptionPage/@Model.ProductId" class="btn btn-dark">
                                                            مشاهده
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div>
                                    <a class="btn btn-light" href="/Admin/ProductList">
                                        بازگشت
                                    </a>
                                </div>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>