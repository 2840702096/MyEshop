     <div class="container-fluid">
                <div class="card">
                    <div class="card-header">
                        <h5>اطلاعات نظر
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th class="text-center" style="vertical-align:middle">نویسنده</th>
                                    <th class="text-center" style="vertical-align:middle">عنوان</th>
                                    <th class="text-center" style="vertical-align:middle">متن نظر</th>
                                    <th class="text-center" style="vertical-align:middle">تاریخ ثبت</th>
                                    <th class="text-center" style="vertical-align:middle">دستورات</th>
                                </tr>
                            </thead>

                            <tbody>
                                            @foreach (var WeblogComments in Model)
                                            {
                                                        <tr>
                                                            <td class="text-center" style="vertical-align: middle;"></td>
                                                            <td class="text-center" style="vertical-align: middle;">@WeblogComments.Title</td>
                                                            <td class="text-center" style="vertical-align: middle;max-width:440px ; min-width:450px; min-height:115px;"><h5 style="display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;overflow: hidden;text-overflow: ellipsis;">@WeblogComments.CommentBody</h5><hr />
