@model MyEshop.Core.DTOs.EditWebsiteCategoryViewModel

@{
    ViewData["Title"] = "ویرایش گروه";
}

<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>
                            ویرایش گروه
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/Admin/Home"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">گروه ها</li>
                        <li class="breadcrumb-item active">
                            ویرایش گروه
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row product-adding">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-header">
                        <h5>اطلاعات گروه</h5>
                    </div>
                    <div class="card-body">
                        <div class="digital-add needs-validation">
                            <form asp-action="EditWebsiteCategory" method="post" enctype="multipart/form-data">
                                <input type="hidden" value="@Model.CurrentImage" name="currentPhoto" />
                                <div class="form-group">
                                    <label class="col-form-label pt-0"><span>*</span>عنوان گروه</label>
                                    <input asp-for="CategoryTitle" class="form-control" type="text">
                                    <span class="text-danger" asp-validation-for="CategoryTitle"></span>
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label pt-0"><span>*</span>رنگ گروه</label>
                                    <input asp-for="Color" style="height:45px; width:80px;" class="" type="color">
                                    <span class="text-danger" asp-validation-for="Color"></span>
                                </div>
                                <div class="form-group">
                                    <label class="col-form-label pt-0"><span>*</span>تصویر</label>
                                    <button type="button"
                                            style="display:block;width:120px; height:30px;border: 1px solid;border-radius: 3px;"
                                            onclick="document.getElementById('getFile').click()">
                                        بارگذاری تصویر
                                    </button>
                                    <input type="file" class="image" id="getFile" style="display:none"
                                           asp-for="NextImage">
                                    <span class="text-danger" asp-validation-for="NextImage"></span>
                                </div>
                                <div>
                                    <img id="Product" class="imgPreview" src="/Admin/images/WebsiteCategoryImages/@Model.CurrentImage"
                                         style="max-width:150px;max-height:150px;margin-bottom:10px" />
                                </div>
                                <div class="form-group mb-0">
                                    <div class="product-buttons text-center">
                                        <button type="submit" class="btn btn-primary">ذخیره</button>
                                        <a href="/Admin/WebSiteCategories" class="btn btn-light">بازگشت</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>

@section Scripts
    {
    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>

    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function(e) {
                    $('#Product').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#getFile").change(function() {
            readURL(this);
        });
    </script>
}
