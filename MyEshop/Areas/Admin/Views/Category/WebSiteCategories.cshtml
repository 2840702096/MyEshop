@using System.IO;
@model IEnumerable<WebSiteCategories>

@{
    ViewData["Title"] = "لیست دسته بندی های سایت";
}

<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>
                            لیست دسته بندی های سایت
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg></a></li>
                        <li class="breadcrumb-item">گروه ها</li>
                        <li class="breadcrumb-item active">
                            لیست دسته بندی های سایت
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h5>
                    اطلاعات گروه ها
                </h5>
            </div>
            <div style="text-align:right; margin-right:50px; margin-top:20px">
                <div class="col-sm-2 col-md-2 d-inline-block">
                    <a href="/Admin/AddWebSiteCategory" class="btn btn-secondary">ایجاد گروه</a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline col-md-8" role="grid">
                                        @if (ViewBag.ThereAreSliders != null)
                                        {
                                            <div style="text-align:right" class="alert alert-danger">
                                                به دلیل وجود اسلایدر در این گروه، عملیات حذف امکانپذیر نیست.
                                            </div>
                                            <a style="margin-right:25px;margin-bottom:20px" href="/Admin/WebSiteCategories" class="btn btn-outline btn-danger btn-sm">لغو</a>
                                        }
                                        @if (ViewBag.ThereAreBanners != null)
                                        {
                                            <div style="text-align:right" class="alert alert-danger">
                                                به دلیل وجود بنر در این گروه، عملیات حذف امکانپذیر نیست.
                                            </div>
                                            <a style="margin-right:25px;margin-bottom:20px" href="/Admin/WebSiteCategories" class="btn btn-outline btn-danger btn-sm">لغو</a>
                                        }
                                        @if (ViewBag.ThereAreSlidersAndBanners != null)
                                        {
                                            <div style="text-align:right" class="alert alert-danger">
                                                به دلیل وجود اسلایدر و بنر در این گروه، عملیات حذف امکانپذیر نیست.
                                            </div>
                                            <a style="margin-right:25px;margin-bottom:20px" href="/Admin/WebSiteCategories" class="btn btn-outline btn-danger btn-sm">لغو</a>
                                        }
                                        @if (ViewBag.ThereAreProducts != null)
                                        {
                                            <div style="text-align:right" class="alert alert-danger">
                                                به دلیل وجود محصول در این گروه، عملیات حذف امکانپذیر نیست.
                                            </div>
                                            <a style="margin-right:25px;margin-bottom:20px" href="/Admin/WebSiteCategories" class="btn btn-outline btn-danger btn-sm">لغو</a>
                                        }
                                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                                            <thead>
                                                <tr>
                                                    <th style="max-width:370px; min-width:370px" class="text-center">گروه</th>
                                                    <th style="max-width:370px; min-width:370px" class="text-center">دستورات</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                @foreach (var Group in Model)
                                                {
                                                    <tr>
                                                        <td style="vertical-align: middle;">
                                                            @Group.CategoryTitle
                                                        </td>
                                                        <td class="text-center">
                                                            <a href="/Admin/DeleteWebseiteCategory/@Group.CategoryId" class="btn btn-danger btn-sm" style="margin:1px">
                                                                حذف
                                                            </a>
                                                            <a href="/Admin/EditWebsiteCategory/@Group.CategoryId" class="btn btn-warning btn-sm" style="margin:1px">
                                                                ویرایش
                                                            </a>
                                                            <a href="/Admin/WebCategorySpecifications/@Group.CategoryId" class="btn btn-secondary btn-sm" style="margin:1px">
                                                                جزعیات
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <nav aria-label="Page navigation example">
                                        <ul class="pagination d-inline-block">
                                            @for (int i = 1; i <= ViewBag.CountOfGroups; i++)
                                            {
                                                <li class="page-item @((ViewBag.PageId==i)?"active":"")"><a class="page-link" href="/Admin/WebSiteCategories?pageId=@i">@i</a></li>
                                            }
                                        </ul>
                                    </nav>
                                </div>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>