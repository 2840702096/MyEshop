@model IEnumerable<SlideCommentTitles>

@{
    int CategotyId = ViewBag.Id;
}

<div class="page-body">

    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>
                            عناوین ارزیابی محصولات این گروه
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/Admin/Home"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">گروه ها</li>
                        <li class="breadcrumb-item active">
                            عناوین ارزیابی محصولات این گروه
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row product-adding">
            <div class="col-xl-6">
                <div class="card">
                    <div class="card-header">
                        <h5> افزودن عنوان</h5>
                    </div>
                    <div class="card-body">
                        <div class="digital-add needs-validation">
                            <form asp-action="TitlesOfEvaluationOfProduct" method="post"
                                  enctype="multipart/form-data">
                                <input type="hidden" value="@CategotyId" name="id" />
                                <div class="form-group">
                                    <label class="col-form-label pt-0"><span>*</span>عنوان</label>
                                    <input name="evalutionTitle" class="form-control" type="text">
                                    @if (ViewBag.Error != null)
                                    {
                                        <p class="text-danger">لطفا عنوان را وارد کنید</p>
                                    }
                                </div>
                                <div style="margin-top:30px" class="form-group mb-0">
                                    <div class="product-buttons text-center">
                                        <a href="/Admin/ProductCategories" class="btn btn-light">بازگشت</a>
                                        <button type="submit" class="btn btn-primary">ذخیره</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="card">
                    <div class="card-header">
                        <h5>
                            عناوین
                        </h5>
                    </div>
                    @if (ViewBag.TherIsValueInIt != null)
                    {
                        <div style="text-align:right; margin-left:10px; margin-right:10px; margin-top:5px" class="alert alert-danger">
                            به دلیل مقدار دهی شدن این عنوان در قسمت مشخصات محصول، عملیات حذف امکان پذیر نیست
                        </div>
                        <a style="width:50px; margin-right:10px; margin-bottom:10px" href="/Admin/TheTitlesOfProductSpecifications/@CategotyId" class="btn btn-outline btn-danger btn-sm">لغو</a>
                    }
                    <div style="overflow-y:auto; max-height:313px; min-height:313px;" class="card-body">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer mt-3"
                               id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th class="text-center" style="width: 300px;">عنوان</th>
                                    <th class="text-center">دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="vertical-align: middle;" class="text-center">
                                            <label>@item.SlideCommentTitle</label>
                                        </td>
                                        <td style="vertical-align: middle;" class="text-center">
                                            <a href="" style="display:flex; flex-direction:column; font-size:25px; color:cadetblue">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>