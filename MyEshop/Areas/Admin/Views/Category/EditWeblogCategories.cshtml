@{
    ViewData["Title"] = "ویرایش گروه";
}

<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>
                            ویرایش گروه
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/Admin/Home"><i data-feather="home"></i></a></li>
                        <li class="breadcrumb-item">گروه ها</li>
                        <li class="breadcrumb-item active">
                            ویرایش گروه
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row product-adding">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-header">
                        <h5>اطلاعات گروه</h5>
                    </div>
                    <div class="card-body">
                        <div class="digital-add needs-validation">
                            <form asp-action="EditWeblogCategories" method="post" enctype="multipart/form-data">
                                @if (ViewBag.EmptyTitle == null)
                                {
                                    <div class="form-group">
                                        <label class="col-form-label pt-0"><span>*</span>عنوان گروه</label>
                                        <input name="title" class="form-control" type="text" value="@ViewBag.Text">
                                    </div>
                                }
                                else
                                {
                                    <div class="form-group">
                                        <label class="col-form-label pt-0"><span>*</span>عنوان گروه</label>
                                        <input name="title" class="form-control" type="text" value="">
                                        <p class="text-danger">
                                            لطفا عنوان گروه را وارد کنید.
                                        </p>
                                    </div>
                                }
                                <div class="form-group mb-0">
                                    <div class="product-buttons text-center">
                                        <button type="submit" class="btn btn-primary">ذخیره</button>
                                        <a href="/Admin/WeblogCategories" class="btn btn-light">بازگشت</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->

</div>

@section Scripts
    {
    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>

    <script>
        function readURL(input) {

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function(e) {
                    $('#Product').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#getFile").change(function() {
            readURL(this);
        });
    </script>
}