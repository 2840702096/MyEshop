@using System.IO;
@model WebSiteCategories

@{
}

<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="page-header">
            <div class="row">
                <div class="col-lg-6">
                    <div class="page-header-left">
                        <h3>مشخصات گروه @Model.CategoryTitle
                        </h3>
                    </div>
                </div>
                <div class="col-lg-6">
                    <ol class="breadcrumb pull-right">
                        <li class="breadcrumb-item"><a href="/"><svg xmlns="http://www.w3.org/2000/svg" width="24"
                                    height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                    stroke-linecap="round" stroke-linejoin="round" class="feather feather-home">
                                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                </svg></a></li>
                        <li class="breadcrumb-item">گروه ها</li>
                        <li class="breadcrumb-item active">مشخصات گروه @Model.CategoryTitle
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="table-responsive">
                                    <div id="dataTables-example_wrapper"
                                        class="dataTables_wrapper form-inline col-md-10" role="grid">
                                        @if (ViewBag.ItExists != null)
                                        {
                                            <div style="text-align:right" class="alert alert-danger">
                                                به دلیل وجود زیرگروه در این گروه، عملیات حذف امکانپذیر نیست.
                                            </div>
                                        }
                                        @if (ViewBag.TheThirdSubCategoryExists != null)
                                        {
                                            <div style="text-align:right" class="alert alert-danger">
                                                به دلیل وجود زیرمجموعه در این زیرگروه، عملیات حذف امکانپذیر نیست.
                                            </div>
                                        }
                                        <table
                                            class="table table-striped table-bordered table-hover dataTable no-footer"
                                            id="dataTables-example" aria-describedby="dataTables-example_info">
                                            <thead>
                                                <tr>
                                                    <th style="max-width:370px; min-width:370px" class="text-center">عکس
                                                    </th>
                                                    <th style="max-width:370px; min-width:370px" class="text-center">
                                                        عنوان</th>
                                                    <th style="max-width:370px; min-width:370px" class="text-center">رنگ
                                                    </th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <tr>
                                                    <td style="vertical-align: middle; text-align:center">@if
                                                        (Model.ImageName != null)
                                                        {
                                                            <img style=" max-width:100px;"
                                                            src="/Admin/images/WebsiteCategoryImages/@Model.ImageName">
                                                        }
                                                    </td>
                                                    <td style="text-align:center; vertical-align:middle">
                                                        @Model.CategoryTitle
                                                    </td>
                                                    <td style="text-align:center; vertical-align:middle">
                                                        <div
                                                            style="height:35px; width:35px;border-radius:12px;display:inline-block; background-color:@Model.Color">

                                                        </div>
                                                    </td>
                                                </tr>

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div>
                                    <a class="btn btn-light" href="/Admin/WebSiteCategories">
                                        بازگشت</a>
                                </div>
                                <!-- /.table-responsive -->
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>