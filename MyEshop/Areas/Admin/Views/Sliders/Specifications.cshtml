@using MyEshop.Core.Convertors
@model Sliders
@inject ISliderServices SliderServices;

<div class="page-body">
          <!-- Container-fluid starts-->
            <div class="container-fluid">
                <div class="page-header">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="page-header-left">
                                <h3>مشخصات اسلایدر @Model.Title
                                </h3>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <ol class="breadcrumb pull-right">
                                <li class="breadcrumb-item"><a href="/"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg></a></li>
                                <li class="breadcrumb-item">اسلایدر ها</li>
                                <li class="breadcrumb-item active">مشخصات اسلایدر @Model.Title</li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->
     <div class="container-fluid">
                <div class="card">
                    <div class="card-header">
                        <h5>اطلاعات اسلایدر
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline" role="grid">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th class="text-center" style="vertical-align:middle">عکس</th>
                                    <th class="text-center" style="vertical-align:middle">عنوان</th>
                                    <th class="text-center" style="vertical-align:middle">گروه</th>
                                    <th class="text-center" style="vertical-align:middle">تاریخ ثبت</th>
                                    <th class="text-center" style="vertical-align:middle">وضعیت</th>
                                    <th class="text-center" style="vertical-align:middle">آدرس سلایدر</th>
                                    <th class="text-center" style="vertical-align:middle">کلمات کلیدی اسلایدر</th>
                                </tr>
                            </thead>

                            <tbody>
                                                        <tr>
                                                            <td class="text-center" style="vertical-align: middle;">
                                                                <img src="/Admin/images/ProductCategorySliderThumbNail/@Model.ImageName" class="img-thumbnail"/>
                                                            </td>
                                                            <td class="text-center" style="vertical-align: middle;">@Model.Title</td>
                                                            <td class="text-center" style="vertical-align: middle;">@SliderServices.GetProductCategoryTitle(Model.ProductCategoryId.Value)</td>
                                                            <td class="text-center" style="vertical-align: middle;">@Model.CreateDate.ToShamsi()</td>
                                                            <td class="text-center" style="vertical-align: middle;">
                                                        @if (Model.IsActive)
                                                        {
                                                            <p style="display:inline-block; font-size:15px; color:green; margin-bottom:-2px"> فعال </p>
                                                        }
                                                        else
                                                        {
                                                            <p style="display:inline-block; font-size:15px; color:red; margin-bottom:-2px"> غیرفعال </p>
                                                        }
                                                            </td>
                                                            <td style="vertical-align:middle; text-align:center">
                                                                @Model.Link
                                                            </td>
                                                             <td class="text-center" style="vertical-align: middle;">
                                                                 @Model.Tags
                                                            </td>
                                                        </tr>
                                            
                            </tbody>
                        </table>
                    </div>
                </div>
                <div>
                    <a class="btn btn-light" href="/Admin/ProductSliderList">
                        بازگشت</a>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
                    </div>
                </div>
            </div>
            <!-- Container-fluid Ends-->
        </div>